<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css">
<%- include('../partials/nav') %>

<main>
  <h1> User Check-Ins</h1>
  <ul>
    <% checkins.forEach(checkin => { %>
      <h1 class-="checkin-username"> <%= user?.profile.name %> </h1>
      <section class="checkin-section">
      <% if (user?.profile.avatar) { %>
        
          <div>
            <img
              src="<%= user.profile.avatar %>"
              alt="<%= user.profile.name %> avatar"
            />
          </div>
      <% } %>
          <div>
            <li id="checkin-name"><%= checkin.name %></li>
            <li id="checkin-rating"><%= checkin.rating %></li>
            <li id="checkin-location"><%= checkin.location %></li>
            <li id="checkin-comment"><%= checkin.comment %></li>
            <li id="checkin-parking"><%= checkin.parking ? 'Has convenient parking' : 'Does not have convenient parking' %></li>
            
          </div>
        </section>
    <% }) %>
  </ul>
</main>

<%- include('../partials/footer') %>