<%- include('../partials/html-head') %>

<%- include('../partials/nav') %>
<main>
  <h2>Checkin in Coffee Shop</h2>
  <ul class="list-group" style="padding: 0px;">
  <% if(user) { %> 
    <li class="list-group-item">
  <form id="new-form" action="/checkins" method="POST">
    <label for="coffee-shop-input">Coffee Shop Name:</label>
      <input 
        type="text" 
        name="name" 
        id="coffee-shop-input"
      >
    </li>
      <br>
      <li class="list-group-item">
    <label for="rating-input">Rating:</label>
      <input 
        id="rating-input" 
        name="rating" 
        type="number" 
        value="5"
        min="1" 
        max="5"
      >
    </li>
      <br>
      <li class="list-group-item">
    <label for="location-input">Location(City only):</label>
      <input 
        id="location-input" 
        type="text" 
        name="location" 
        placeholder="Ex. Denver"
      >
    </li>
      <br>
      <li class="list-group-item">
      <label for="beverage-input">Drink:</label>
    <select 
    name="beverage" 
    id="beverage-input"
    >
    </li>
    <br>
    <li class="list-group-item">
      <% beverages.forEach(beverage => { %>
        <option value="<%= beverage._id %>"><%= beverage.name %></option>
      <% }) %>
    </select>
    </li>
    <br>
    <li class="list-group-item">
    <label for="parking-checkbox">Is there convenient parking?</label>
      <input 
        type="checkbox"
        name="parking"
        id="parking-checkbox"
      >
    </li>
      <br>
      <li class="list-group-item">
    <label for="comment-input">Comments:</label>
      <input 
        type="text" 
        name="comment" 
        id="comment-input"
        maxlength="55"
        placeholder="Max 55 Characters"
      >
    </li>
      <br>
    <button type="submit">Add Checkin</button>
  </form>
  <% } %>
  
</ul>
</main>


<%- include('../partials/footer') %>